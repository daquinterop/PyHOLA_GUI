#:kivy 2.0.0
<SectionLabel>:
    canvas.before:
        Color:
            hsv: 0, 0, .5
        Rectangle:
            pos: self.pos
            size: self.size
    halign: 'left'
    valign: 'middle'
    text_size: 0.95 * self.width, self.height
    size_hint: 1, 0.4

<ShellCommand>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.95
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: 1, 0, 0
        Rectangle:
            pos: 0, self.height - 1
            size: self.width, 1
    text_size: 0.96 * self.width, self.height
    size_hint: 1, 1
    halign: 'left'
    valign: 'top'
    font_name: 'Cour'

<AboutUSLabel>:
    text_size: self.width, None
    height: self.texture_size[1]

<WarningLabel>:
    text_size: self.width, None
    height: self.texture_size[1]

<Root>:
    canvas:
        Color:
            hsv: 0, 0, .95
        Rectangle:
            pos: self.pos
            size: self.size
        # Color:
        #     rgba: 1, 1, 0, 0.05
        # Rectangle:
        #     pos: self.pos
        #     size: self.size
    # App Header
    BoxLayout:
        orientation: 'horizontal'
        BlankSpace:
            size_hint: 0.04, 1
        Image:
            source: 'UNR.png'
            size_hint: 0.10, 1
           # pos_hint: {'left':1, 'top':1}
            
        Label:
            id: title
            text: '[b][color=000000]PyHOLA (Python based Hologram API) sensing system data downloader[/b][/color] \n [color=666666]Water and irrigation management lab - University of Nevada, Reno[/color]'
            pos_hint: {'y': 0, 'center_x': 0.5}
            size_hint: 0.50, 0.95
            halign: 'center'
            valign: 'middle'
            background_color: 1, 0, 0, 1
            markup: True
        BlankSpace:
            size_hint: 0.02, 1
        Button:
            id: About_us
            text: 'About us'
            # size_hint: 0.1, 1
            pos_hint: {'center_y': .5, 'center_x': 0.5}
            size_hint: 0.10, 0.60
            background_normal: ''
            background_color: 0/255, 0/255, 102/255, 1.
            on_release: root.open_aboutus()
        BlankSpace:
            size_hint: 0.02, 1

    # Place to insert device info
    SectionLabel:
        text: '1. Insert device and organization info'
    
    BoxLayout:
        id: device_info
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "[b][color=000000]DeviceID:[/b][/color]"
                markup: True
            TextInput:
                id: deviceID
                text: root.deviceid
                multiline: False
                size_hint: 0.8, 0.9
                pos_hint: {'center_x': 0.5}
                font_size: 0.5 * self.height
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "[b][color=000000]Organization ID:[/b][/color]"
                markup: True
            TextInput:
                id: OrganizationID
                text: root.orgid
                multiline: False
                size_hint: 0.8, 0.9
                pos_hint: {'center_x': 0.5}
                font_size: 0.5 * self.height
    # Place for APIKey
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.6, 0.95
        pos_hint: {'center_x': 0.5}
        Label:
            text: "[b][color=000000]API Key:[/b][/color]"
            markup: True
        TextInput:
            id: APIKey
            text: root.apikey
            multiline: False
            size_hint: 0.9, 0.9
            pos_hint: {'center_x': 0.5}
            font_size: 0.5 * self.height
    BlankSpace:
        size_hint: 1, 0.2
    # Place for dates selector
    SectionLabel:
        text: '2. Set download parameters'
    BlankSpace:
        size_hint: 1, 0.02
    BoxLayout:
        id: date_selector
        orientation: 'vertical'
        BlankSpace:
            size_hint: 1, 0.5
        # Label:
        #     text: '[b][color=000000]Select date range to download[/b][/color]'
        #     markup: True
        BlankSpace:
            size_hint: 1, 0.5
        MDRaisedButton:
            text: 'Select date range to download'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release: root.show_date_picker()
        BlankSpace:
            size_hint: 1, 0.5
        Label:
            id: date_label
            text: 'Select date range'
            color: 0, 0, 0, 1

    # Place for other options
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 0.9, 1
        pos_hint: {'center_x': 0.5}
        Label:
            text: '[b][color=000000]Append to existing file[/b][/color]'
            markup: True
        CheckBox:
            id: append
            active: False
            color: 0, 0, 0, 1
        Label:
            text: '[b][color=000000]Only live[/b][/color]'
            markup: True
        CheckBox:
            id: isLive
            active: True
            color: 0, 0, 0, 1
        Label:
            text: '[b][color=000000]Time zone[/b][/color]'
            markup: True
        PickHour:
            id: timeDelta
            size_hint: 0.8, 0.6
            pos_hint: {'center_y': 0.5}
            text: root.timezone
    # Place for file location
    SectionLabel:
        text: '3. Select file to save downloaded records'
    BlankSpace:
        size_hint: 1, 0.1
    BoxLayout:
        orientation: 'vertical'
        MDRaisedButton:
            text: 'Open file'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release: root.open_file()
        Label:
            id: file_label
            text: 'Select the file'
            color: 0, 0, 0, 1
    BlankSpace:
        size_hint: 1, 0.1
        
    # Download Button
    SectionLabel:
        text: '4. Download'
    BlankSpace:
        size_hint: 1, 0.2
    Button:
        id: download_button
        text: 'Download'
        # size_hint: 0.1, 1
        pos_hint: {'y': 0, 'center_x': 0.5}
        size_hint: 0.5, 0.95
        on_release: root.download()
        background_normal: ''
        background_color: 51/255, 204/255, 51/255, 1.
    BlankSpace:
        size_hint: 1, 0.2
    # Place for progress bar
    BoxLayout:
        size_hint: 1, 1.5
        orientation: 'horizontal'
        ShellCommand:
            id: console_prompt
    